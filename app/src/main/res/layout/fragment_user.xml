<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_playground"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_gravity="center">

        <com.andy.globe.widget.GlobeUserBackgroundView
            android:id="@+id/background_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll_similar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/shape_cecece_circle"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/iv_similar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#FEBD02"
                android:text="88%"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FEBD02"
                android:text="同我"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_active"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/shape_cecece_circle"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/iv_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#FEBD02"
                android:text="82%"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FEBD02"
                android:text="活跃"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true">

            <com.andy.globe.widget.GlobeUserPhotoView
                android:id="@+id/iv_photo"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/icon_playground_user_sex_man"/>

                <TextView
                    android:id="@+id/iv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:text="小仙女美美哒"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/iv_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="13"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textColor="#FFFFFF"
                tools:text="南昌大学科技技术学院"/>
        </LinearLayout>

        <com.andy.globe.widget.CircleImageView
            android:id="@+id/iv_large_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp"
            android:src="@drawable/icon_playground_user_man"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</FrameLayout>